<Window x:Class="Chromebook_Firmware_Update_Tool.AuronConfirm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chromebook_Firmware_Update_Tool"
        Title="Select Model" Height="300" Width="450" ResizeMode="NoResize">
    <Grid>
        <Label Content="Please Select your Chromebook Model" HorizontalAlignment="Center" Margin="0,15,0,0"
           VerticalAlignment="Top" FontSize="16"/>
        <Image HorizontalAlignment="Left" Height="89" Margin="42,82,0,0" VerticalAlignment="Top" Width="170"
           Source="c740.png"/>
        <Image HorizontalAlignment="Left" Height="153" Margin="249,49,0,0" VerticalAlignment="Top" Width="173"
           Source="c910.png"/>
        <Button x:Name="c740" Content="Acer C740" HorizontalAlignment="Left" Margin="80,206,0,0"
            VerticalAlignment="Top" Width="74" Click="c740_Click"/>
        <Button x:Name="c910" Content="Acer CB5-571/C910" HorizontalAlignment="Left" Margin="264,206,0,0"
            VerticalAlignment="Top" Width="128" Click="c910_Click"/>
        <Label Content="You will only be able to set this once." HorizontalAlignment="Left" Margin="121,237,0,0"
           VerticalAlignment="Top"/>
    </Grid>
</Window>